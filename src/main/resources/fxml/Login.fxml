<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" fx:id="stage" fullScreenExitHint="" minHeight="700.0" minWidth="650.0"
       title="Вход" xmlns="http://javafx.com/javafx/11.0.1"
       fx:controller="ldcapps.servicehelper.controllers.LoginController">
    <scene>
        <Scene>
            <AnchorPane fx:id="pane" style="-fx-background-color: rgb(255,200,118);">
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      alignment="CENTER" prefHeight="260.0" prefWidth="370.0" spacing="10"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" fx:id="loginVb">
                    <HBox alignment="CENTER">
                        <AnchorPane HBox.hgrow="ALWAYS">
                            <RadioButton fx:id="stayOfflineBtn" text="Работать автономно" AnchorPane.leftAnchor="0.0"
                                         AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
                            <Button fx:id="signupBtn" text="Регистрация" stylesheets="@../css/toolsBtns.css" id="login"
                                    prefWidth="110.0" AnchorPane.rightAnchor="0.0"/>
                        </AnchorPane>
                    </HBox>
                    <HBox>
                        <TextField fx:id="loginTf" prefHeight="30.0" prefWidth="220.0" maxWidth="Infinity"
                                   HBox.hgrow="ALWAYS"
                                   promptText="Логин"/>
                    </HBox>
                    <HBox>
                        <PasswordField fx:id="passwordTf" prefHeight="30.0" prefWidth="90.0" maxWidth="Infinity"
                                       HBox.hgrow="ALWAYS"
                                       promptText="Пароль"/>
                    </HBox>
                    <HBox spacing="10">
                        <TextField fx:id="oosLocateTf" prefHeight="30.0" prefWidth="460.0"
                                   promptText="Расположение ЗН" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="oosLocateBtn" mnemonicParsing="false" prefHeight="30.0"
                                prefWidth="30.0" text="🔎"/>
                    </HBox>
                    <HBox spacing="10">
                        <TextField fx:id="actsLocateTf" prefHeight="30.0" prefWidth="460.0"
                                   promptText="Расположение актов" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="actsLocateBtn" mnemonicParsing="false" prefHeight="30.0"
                                prefWidth="30.0" text="🔎"/>
                    </HBox>
                    <HBox spacing="10">
                        <TextField fx:id="contractsLocateTf" prefHeight="30.0" prefWidth="460.0"
                                   promptText="Расположение договоров" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="contractsLocateBtn" mnemonicParsing="false" prefHeight="30.0"
                                prefWidth="30.0" text="🔎"/>
                    </HBox>
                    <HBox alignment="CENTER">
                        <Button fx:id="confirmBtn" text="Продолжить" stylesheets="@../css/toolsBtns.css" id="login"
                                prefWidth="125.0"/>
                    </HBox>
                    <padding>
                        <Insets left="20.0" right="20.0" top="20.0" bottom="20.0"/>
                    </padding>
                </VBox>
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
